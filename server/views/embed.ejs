<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="referrer" content="origin" />
  <title><%= video.title %> - ClipLink</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html, body { width: 100%; height: 100%; overflow: hidden; background: #000; }
    video, iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }
    video { object-fit: contain; }
    .container {
      position: relative;
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>
  <div class="container">
    <% if (isEmbed) { %>
    <iframe
      src="<%= videoSrc %>"
      allowfullscreen
      allow="autoplay; fullscreen"
    ></iframe>
    <% } else { %>
    <video
      id="player"
      autoplay
      loop
      muted
      playsinline
      preload="auto"
      <% if (video.thumbnail_path) { %>
      poster="<%= baseUrl %>/api/videos/<%= video.id %>/thumbnail"
      <% } %>
    >
      <source src="<%= videoSrc %>" type="video/mp4" />
    </video>
    <% } %>
  </div>
  <script src="https://cdn.embed.ly/player-0.1.0.min.js"></script>
  <script>
    <% if (!isEmbed) { %>
    const video = document.getElementById('player');
    video.play().catch(() => {});
    video.addEventListener('click', () => {
      video.muted = !video.muted;
    });

    if (typeof playerjs !== 'undefined') {
      const receiver = new playerjs.Receiver();

      receiver.on('play', function () { video.play(); });
      receiver.on('pause', function () { video.pause(); });
      receiver.on('getPaused', function (callback) { callback(video.paused); });

      receiver.on('mute', function () { video.muted = true; });
      receiver.on('unmute', function () { video.muted = false; });
      receiver.on('getMuted', function (callback) { callback(video.muted); });

      receiver.on('setVolume', function (val) { video.volume = val / 100; });
      receiver.on('getVolume', function (callback) { callback(video.volume * 100); });

      receiver.on('getDuration', function (callback) { callback(video.duration); });
      receiver.on('setCurrentTime', function (val) { video.currentTime = val; });
      receiver.on('getCurrentTime', function (callback) { callback(video.currentTime); });

      receiver.on('setLoop', function (val) { video.loop = val; });
      receiver.on('getLoop', function (callback) { callback(video.loop); });

      video.addEventListener('play', function () { receiver.emit('play'); });
      video.addEventListener('pause', function () { receiver.emit('pause'); });
      video.addEventListener('ended', function () { receiver.emit('ended'); });
      video.addEventListener('error', function () { receiver.emit('error'); });
      video.addEventListener('timeupdate', function () {
        receiver.emit('timeupdate', {
          seconds: video.currentTime,
          duration: video.duration
        });
      });

      receiver.ready();
    }
    <% } %>
  </script>
</body>
</html>
